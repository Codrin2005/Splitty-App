<AnchorPane prefHeight="415.0" prefWidth="357.0" stylesheets="@/client/stylesheets/general.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.SettingsCtrl">
   <children>
      <Label fx:id="settings" layoutX="108.0" layoutY="44.0" prefHeight="43.0" prefWidth="142.0" text="settings.settings">
         <font>
            <Font name="Comfortaa Medium" size="33.0" />
         </font>
      </Label>
      <Button fx:id="edit" layoutX="118.0" layoutY="122.0" mnemonicParsing="false" onAction="#editProfileAction" prefHeight="31.0" prefWidth="122.0" text="settings.edit_profile">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="language" layoutX="118.0" layoutY="175.0" mnemonicParsing="false" onAction="#language" prefHeight="27.0" prefWidth="122.0" text="settings.language">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="adminMode" layoutX="118.0" layoutY="283.0" mnemonicParsing="false" onAction="#adminAction" prefHeight="27.0" prefWidth="122.0" text="settings.admin_mode">
