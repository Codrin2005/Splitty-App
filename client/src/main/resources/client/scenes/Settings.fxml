            <ImageView fitHeight="21.0" fitWidth="17.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/client/icons/back.png" />
               </image>
            </ImageView>
            <Label fx:id="back" layoutX="30.0" layoutY="3.0" prefHeight="17.0" prefWidth="45.0" text="settings.back">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Pane>
   </children>
</AnchorPane>
